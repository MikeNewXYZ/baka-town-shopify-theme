<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ shop.name }}</title>
    {{ content_for_header }}
    {{ 'resetcss.css' | asset_url | stylesheet_tag }}
    {{ 'bootstrap.min.css' | asset_url | stylesheet_tag }}
    {{ 'main.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'bootstrap.min.js' | asset_url }}"></script>
    <script src="{{ 'cart.js' | asset_url }}"></script>
    <script src="{{ 'anime.min.js' | asset_url }}"></script>
    <script src="{{ 'noframework.waypoints.js' | asset_url }}"></script>
    <script src="{{ 'shopify-money.js' | asset_url }}"></script>
    <script src="{{ 'alpinejs.min.js' | asset_url }}" defer></script>
  </head>
  <body>

    {% section 'header' %}

    <main
      {% if template.name == 'index' %}
        class="content__wrapper"
      {% else %}
        class="content__wrapper gap-0"
      {% endif %}
    >
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

  </body>
</html>
